@model Proiect_DAW.Models.Review

@{
    ViewBag.Title = "Update";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Review"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(r => r.ReviewId)
    <br />

    @Html.Label("Content", "Content:")
    <br />
    @Html.EditorFor(r => r.Content, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(r => r.Content, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Rating", "Rating:")
    <br />
    @Html.EditorFor(r => r.Rating, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(r => r.Rating, "", new { @class = "text-danger" })
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}

@Html.ActionLink("Back", "Details", routeValues: new { id = Model.MovieId })
